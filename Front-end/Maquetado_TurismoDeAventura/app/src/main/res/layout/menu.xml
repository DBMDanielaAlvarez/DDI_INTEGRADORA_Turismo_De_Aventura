<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center">

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/search_black"
        android:drawableTint="#8BB5D6"
        android:paddingStart="5dp"
        android:paddingEnd="20dp"
        android:text="Busqueda de Pueblos Magicos"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:onClick="irABuscador"
        />

    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:text="Populares"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/chart_black"
        android:drawableTint="#73A5CD"
        android:paddingStart="5dp"
        android:paddingEnd="17dp"
        android:layout_gravity="center"
        android:onClick="irAPopulares"
        />
    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/button3"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:text="Mejor calificacion"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/borde"
        android:drawableTint="#70A6D1"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center"
        android:onClick="irAMejorCalificacion"
        />
    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/button3"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:text="Pueblos Magicos"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/borde"
        android:drawableTint="#70A6D1"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center"
        android:onClick="irAPueblosMagicos"
        />


    <Button
        android:id="@+id/button6"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="@drawable/borde"
        android:drawableTint="#4CAF50"
        android:paddingStart="5dp"
        android:paddingEnd="28dp"
        android:text="Acerca de Turismo de Aventura"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:onClick="irAAcercade"/>


</LinearLayout>